<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Glavni stupčasti container; centriramo sadržaj i ograničavamo maksimalnu širinu djece -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginBottom="56dp"
        android:gravity="center_horizontal">

        <!-- Lokacija (touch target >= 48dp, max širina 600dp) -->
        <EditText
            android:id="@+id/etLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:maxWidth="600dp"
            android:minHeight="48dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:hint="Upiši lokaciju"
            android:background="@drawable/edittext_background"
            android:textColorHint="#888"
            android:textSize="16sp" />

        <!-- Spinner za ukuse (touch target >= 48dp, max širina 600dp) -->
        <Spinner
            android:id="@+id/spinnerCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:maxWidth="600dp"
            android:minHeight="48dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="12dp" />

        <!-- Gumb za pretragu (ograničena širina radi tablet layouta) -->
        <Button
            android:id="@+id/btnSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:maxWidth="600dp"
            android:minHeight="48dp"
            android:text="Pretraži"
            android:layout_marginTop="12dp"
            android:backgroundTint="#DD6941"
            android:textColor="#FFFFFF" />

        <!-- Lista restorana (također ograničena širina radi validacije na >600dp) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:maxWidth="600dp"
            android:layout_marginTop="16dp"
            android:clipToPadding="false"
            android:paddingBottom="8dp" />

        <!-- Prazna lista (ograničena širina, centriran tekst) -->
        <TextView
            android:id="@+id/tvEmpty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:maxWidth="600dp"
            android:text="Nema pronađenih restorana."
            android:textColor="#888"
            android:textAlignment="center"
            android:gravity="center"
            android:padding="12dp"
            android:textSize="16sp"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Donja navigacija (zadržavamo — upozorenje za >600dp ćemo “ugasiti” time što je glavni sadržaj max 600dp) -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="?android:attr/windowBackground"
        app:itemIconTint="#103859"
        app:itemTextColor="#103859"
        app:menu="@menu/bottom_nav_menu" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
